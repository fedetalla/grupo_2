<!DOCTYPE html>
<html lang="en">

  <!-- header EJS -->
  <%- include('parcial/head.ejs') %>


    <body class="register-body">

        <main class="login-main">

            <div class="contenedor">
                <img class="img-login" src="/img/fondo-mobile-login2.jpeg" alt="">

                <video class="video-login" autoplay loop muted>
                    <source src="/img/Videos/fondo3.mp4" type="video/mp4">
                </video>
                <div class="login-box">
                    <a href="/"><img src="/img/logo-san-diego.png" class="avatar" alt="Logo San Diego"></a>

                    <h1>Iniciar sesión</h1>
                    <form class="form-login" action="/users/login" method="POST">
                        <label for="email">Email</label>
                        <input type="email" name="email" placeholder="usuario@gmail.com">
                        <label for="password">Contraseña</label>
                        <input type="password" name="password" id="password"
                            placeholder="Ingresá tu contraseña">
                        <input type="submit">Iniciar sesión</input>

                        <a href="#">¿Olvidaste tu contraseña?</a><br>
                        <a href="/users/register">Crear una cuenta</a>
                    </form>
                </div>
        </main>
    </body>

</html>