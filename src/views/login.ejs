<!DOCTYPE html>
<html lang="en">

  <!-- header EJS -->
  <%- include('parcial/head.ejs') %>

  
    <body class="register-body">
        
        <main class="login-main">

            <div class="contenedor">
                <img class="img-login" src="/img/fondo-mobile-login2.jpeg" alt="">

                <video class="video-login" autoplay loop muted>
                    <source src="/img/Videos/fondo3.mp4" type="video/mp4">
                </video>
                <div class="login-box">
                    <a href="/"><img src="/img/logo-san-diego.png" class="avatar" alt="Logo San Diego"></a>
                    <form id= "formRegister" class="form-login" action="/users/login" method="POST">
                        <h1>Iniciar sesión</h1>
                        <ul class="errores"></ul>
                        <label for="email">Email</label>
                        <input id="email" type="email" name="email" placeholder="usuario@gmail.com">
                        <% if (locals.errors && errors.email) { %>
                            <p style="color: red;padding: 12px 0px;text-align: center;">
                                <%= errors.email.msg%></p>
                           <% } %>
                        <label for="password">Contraseña</label>
                        <input id="password" type="password" name="password"
                            placeholder="Ingresá tu contraseña">

                        <div class="rmb-login">
							<label class="">Recordar mi usuario </label>
                            <input type="checkbox" class="form-check-input" name="remember_user">
                           
						</div>
                            
                        <button type="submit">Iniciar sesión</button>

                        <a href="#">¿Olvidaste tu contraseña?</a><br>
                        <a href="/users/register">Crear una cuenta</a>
                    </form>
                </div>
            </div>
        </main>
    <script src="/js/registerLoginValidation.js"></script>
    </body>

</html>